---
import BaseHead from "../components/BaseHead.astro";
import Header from "../components/Header.astro";
import Footer from "../components/Footer.astro";
import { BackgroundImage, ImageSupportDetection } from "astro-imagetools/components";

let title = "The Jeppzone Blog";
let description = "The Jeppzone blog aims to be a source of inspiration for health and lifestyle-related content.";

// Use Astro.glob to fetch all post with associated frontmatter
const nbrOfPostsToShow = 6;
const unsortedPosts = await Astro.glob("./lifestyle/blog/*.md");
const posts = unsortedPosts
  .sort(function (a, b) {
    return new Date(b.frontmatter.publishDate).valueOf() - new Date(a.frontmatter.publishDate).valueOf();
  })
  .slice(0, nbrOfPostsToShow);
---

<html lang="en">
  <head>
    <BaseHead title={title} description={description} image="https://i.ibb.co/qNSvxXB/j-logo-high-res.png" canonicalUrl="https://jeppzone.com/" />
  </head>

  <body>
    <Header />
    <div class="wrapper">
      <main class="content">
        <section class="intro">
          <img class="round" src="https://i.ibb.co/mHtqVph/Jesper-olsson-laine.jpg" alt="Jesper Olsson Laine" />
          <h1>Jesper "Jeppzone" Olsson Laine</h1>
          <h2>Hi! I'm Jesper. A software developer, gamer and health enthusiast.</h2>
          <h3>
            I like to create videos and write articles about these topics. Feel free to check out my content or read more about me in the <a
              href="/lifestyle">about section</a
            >
          </h3>
        </section>
        <section>
          <h3>Content sections</h3>
          <div class="topics">
            <a href="/gaming"><div class="topic"><img src="/assets/blog/gaming_thumbnail.png" /></div></a>
            <a href="/lifestyle"><div class="topic"><img src="/assets/blog/lifestyle_thumbnail.png" /></div></a>
            <!-- <a href="/tech"><div class="topic"><img src="/assets/blog/tech_thumbnail.png" /></div></a> -->
          </div>
          <h3>Recent posts</h3>
          <div class="recent-posts">
            {
              posts.map(({ url, frontmatter }) => (
                <a href={url}>
                  <div
                    class="recent-post"
                    style={`background-image: linear-gradient(rgba(0, 0, 0, 0.60), rgba(0, 0, 0, 0.60)), url(${frontmatter.heroImage.src})`}
                  >
                    <h4>{frontmatter.title}</h4>
                  </div>
                </a>
              ))
            }
          </div>
        </section>
      </main>
    </div>
    <Footer />
  </body>

  <style>
    body {
      margin: 0;
    }
    .wrapper {
      min-height: 100vh;
      padding-top: 1rem;
    }

    .intro {
      margin-bottom: 1rem;
      border-bottom: 4px solid var(--theme-divider);
      text-align: center;
    }

    h1 {
      font-size: 2.5rem;
      font-weight: 700;
    }
    h3 {
      text-align: center;
    }
    .round {
      border-radius: 50%;
    }
    .intro img {
      width: 300px;
    }
    .topic {
      margin-left: 5px;
      margin-right: 5px;
      margin-bottom: 10px;
    }
    .topic img {
      border-radius: 5px;
      width: 300px;
    }
    .topics {
      display: flex;
      justify-content: space-between;
      flex-wrap: wrap;
      border-bottom: 4px solid var(--theme-divider);
    }
    .recent-post {
      color: white;
      display: flex;
      justify-content: center;
      align-items: center;
      width: 300px;
      height: 168px;
      border-radius: 10px;
      margin-left: 5px;
      margin-right: 5px;
      margin-bottom: 10px;
      background-size: contain;
    }
    .recent-post h4 {
      font-weight: bold;
      text-align: center;
    }
    .recent-posts {
      margin-top: 10px;
      display: flex;
      justify-content: space-between;
      flex-wrap: wrap;
    }
    @media screen and (max-width: 700px) {
      .topics {
        flex-direction: column;
        align-items: center;
      }
    }
  </style>
</html>
